{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://smart.who.int/trust/trustlist-embedded.schema.json",
    "title": "WHO DID Trustlist v2 (Embedded)",
    "type": "object",
    "required": [
        "@context",
        "id",
        "verificationMethod"
    ],
    "properties": {
        "@context": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "https://www.w3.org/ns/did/v1",
                    "https://w3id.org/security/suites/jws-2020/v1"
                ]
            },
            "minItems": 2
        },
        "id": {
            "type": "string",
            "pattern": "^did:web:.*"
        },
        "controller": {
            "type": "string",
            "pattern": "^did:web:.*"
        },
        "verificationMethod": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "type",
                    "controller",
                    "publicKeyJwk"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "JsonWebKey2020"
                        ]
                    },
                    "controller": {
                        "type": "string",
                        "pattern": "^did:web:.*"
                    },
                    "publicKeyJwk": {
                        "type": "object",
                        "required": [
                            "kty"
                        ],
                        "properties": {
                            "kty": {
                                "type": "string",
                                "enum": [
                                    "EC",
                                    "RSA"
                                ]
                            },
                            "crv": {
                                "type": "string"
                            },
                            "x": {
                                "type": "string"
                            },
                            "y": {
                                "type": "string"
                            },
                            "e": {
                                "type": "string"
                            },
                            "n": {
                                "type": "string"
                            },
                            "kid": {
                                "type": "string"
                            },
                            "x5c": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "allOf": [
                            {
                                "if": {
                                    "properties": {
                                        "kty": {
                                            "const": "EC"
                                        }
                                    }
                                },
                                "then": {
                                    "required": [
                                        "crv",
                                        "x",
                                        "y"
                                    ],
                                    "properties": {
                                        "crv": {
                                            "enum": [
                                                "P-256",
                                                "UNKNOWN CURVE"
                                            ]
                                        }
                                    }
                                }
                            },
                            {
                                "if": {
                                    "properties": {
                                        "kty": {
                                            "const": "RSA"
                                        }
                                    }
                                },
                                "then": {
                                    "required": [
                                        "e",
                                        "n"
                                    ]
                                }
                            }
                        ],
                        "additionalProperties": true
                    }
                },
                "additionalProperties": false
            }
        },
        "proof": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "created": {
                    "type": "string",
                    "format": "date-time"
                },
                "proofPurpose": {
                    "type": "string"
                },
                "verificationMethod": {
                    "type": "string"
                },
                "jws": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "created",
                "proofPurpose",
                "verificationMethod",
                "jws"
            ],
            "additionalProperties": true
        }
    },
    "additionalProperties": false
}